{
  "id": null,
  "title": "App Metrics Dashboard",
  "tags": ["k8s", "app"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage (cores)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"briitz\",pod!=\"\"}[2m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage (bytes)",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{namespace=\"briitz\",pod!=\"\"}) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ]
    }
  ]
}
